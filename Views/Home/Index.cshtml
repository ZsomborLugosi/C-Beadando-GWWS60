@{
    ViewData["Title"] = "Dockyard Manager";
}

<div class="welcome-hero text-center">
    <div class="container">
        <i class="bi bi-water welcome-icon"></i>
        <h1 class="welcome-title">Welcome to Dockyard Manager</h1>
        <p class="welcome-subtitle">An efficient system for managing ships in your harbor</p>
        <a href="/Ship" class="btn btn-light btn-lg">
            <i class="bi bi-ship me-2"></i>Manage Ships
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-speedometer2 ship-icon"></i>
                <h5 class="card-title">Efficient Management</h5>
                <p class="card-text">Track all ships in your harbor with easy-to-use tools for adding, editing and monitoring vessels.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-pdf ship-icon"></i>
                <h5 class="card-title">PDF Manifests</h5>
                <p class="card-text">Generate official ship manifests with a single click for all your documentation needs.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-graph-up ship-icon"></i>
                <h5 class="card-title">Data Insights</h5>
                <p class="card-text">Keep track of cargo, weights, and arrival times for better port management and planning.</p>
            </div>
        </div>
    </div>
</div>