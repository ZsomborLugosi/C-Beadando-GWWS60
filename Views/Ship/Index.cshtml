@model IEnumerable<Ship>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Ships in Harbor</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Ship
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No ships currently in harbor. Click "Add New Ship" to create one.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Cargo</th>
                    <th>Weight (tons)</th>
                    <th>Arrival Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ship in Model)
                {
                    <tr>
                        <td>@ship.Name</td>
                        <td>@ship.Cargo</td>
                        <td>@ship.Weight.ToString("N2")</td>
                        <td>@ship.ArrivalDate.ToShortDateString()</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@ship.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@ship.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a asp-action="Manifest" asp-route-id="@ship.Id" class="btn btn-info">
                                    <i class="bi bi-file-pdf"></i> PDF
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any JavaScript functionality here
            // For example, you could add sorting or filtering
        });
    </script>
}