@model Ship

<div class="row mb-4">
    <div class="col-md-8">
        <h2 class="mb-1">Add New Ship</h2>
        <p class="text-muted">Register a new vessel in your harbor</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-ship"></i>
                                    </span>
                                    <input asp-for="Name" class="form-control" placeholder="Enter ship name" />
                                </div>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Cargo" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-box-seam"></i>
                                    </span>
                                    <input asp-for="Cargo" class="form-control" placeholder="Enter cargo type" />
                                </div>
                                <span asp-validation-for="Cargo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Weight" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-speedometer"></i>
                                    </span>
                                    <input asp-for="Weight" class="form-control" type="number" step="0.01" placeholder="Enter weight" />
                                    <span class="input-group-text bg-light">tons</span>
                                </div>
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ArrivalDate" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-calendar-event"></i>
                                    </span>
                                    <input asp-for="ArrivalDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                </div>
                                <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Create Ship
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4 d-none d-lg-block">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Ship Information</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">
                    Please provide all the required information about the ship for accurate record-keeping.
                </p>

                <div class="mt-4">
                    <h6><i class="bi bi-info-circle me-2"></i>Required Fields</h6>
                    <ul class="list-unstyled ms-4 mt-2">
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Ship Name</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Cargo Type</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Weight (in tons)</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success me-2"></i>Arrival Date</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}