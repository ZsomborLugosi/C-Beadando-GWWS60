@model Ship

<h2 class="mb-4">Delete Ship</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this ship?</h4>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5>@Model.Name</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            
            <dt class="col-sm-3">Cargo</dt>
            <dd class="col-sm-9">@Model.Cargo</dd>
            
            <dt class="col-sm-3">Weight</dt>
            <dd class="col-sm-9">@Model.Weight tons</dd>
            
            <dt class="col-sm-3">Arrival Date</dt>
            <dd class="col-sm-9">@Model.ArrivalDate.ToShortDateString()</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>