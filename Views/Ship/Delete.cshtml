@model Ship

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="mb-1">Delete Ship Confirmation</h2>
        <p class="text-muted">Review the details below before permanently deleting this ship.</p>
    </div>
</div>

<div class="alert alert-danger d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" style="font-size: 1.5rem;"></i>
    <div>
        <h4>Are you sure you want to delete this ship?</h4>
        This action cannot be undone.
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-ship me-2"></i>@Model.Name</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3"><i class="bi bi-tag me-2 text-muted"></i>Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3"><i class="bi bi-box-seam me-2 text-muted"></i>Cargo</dt>
            <dd class="col-sm-9">@Model.Cargo</dd>

            <dt class="col-sm-3"><i class="bi bi-speedometer me-2 text-muted"></i>Weight</dt>
            <dd class="col-sm-9">@Model.Weight.ToString("N2") tons</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-event me-2 text-muted"></i>Arrival Date</dt>
            <dd class="col-sm-9">@Model.ArrivalDate.ToShortDateString()</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Cancel
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-2"></i>Delete Forever
        </button>
    </div>
</form>