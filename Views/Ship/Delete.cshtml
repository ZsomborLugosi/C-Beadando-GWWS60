@model Ship

<h2>Delete Ship</h2>

<h3>Are you sure you want to delete this ship?</h3>

<div>
    <h4>@Model.Name</h4>
    <p><strong>Cargo:</strong> @Model.Cargo</p>
    <p><strong>Weight:</strong> @Model.Weight</p>
    <p><strong>Arrival Date:</strong> @Model.ArrivalDate.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>